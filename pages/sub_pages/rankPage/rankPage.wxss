.radio-group {
    position: fixed;
    display: flex;
    flex-direction: row;
    margin-top: 40rpx;
    width: 93%;
}

.radio {
    flex: 1;
    margin: 10rpx;
    /* border-radius: 10rpx; */
    height: 80rpx;
    font-size: 40rpx;
    /* font-weight: bold;
    color: white; */
    text-align: center;
    line-height: 80rpx;
    /* box-shadow: 0rpx 5rpx 0rpx #888; */
    display: flex;
    align-items: center;
    justify-content: center;
}

.radio image {
    width: 211rpx;
    height: 67rpx;
}

.choosed {
    display: flex;
    /* background: linear-gradient(to right,#FECD65,#FDCC63); */
}

.un-choosed {
    display: flex;
    /* background: linear-gradient(to right,#43D0E0,#46CEDE); */
}

.rankList-wrap {
    position: fixed;
    top: 120rpx;
    /* flex: 1; */
    /* background: #EEEFF1; */
    width: 90%;  
    height: 86%;
    border-radius: 20rpx;
    margin: 20rpx 0;
    display: flex;
    align-items: center;
    flex-direction: column;
    padding-left: 15rpx;
    /* border: 1rpx solid #C8D4D5; */
}

.rankList-wrap scroll-view {
    /* flex: 1; */
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow: hidden;
    height: 100%;
    margin-left: 34rpx;
    /* padding-left: 15rpx; */
}

.item {
    width: 90%;
    height: 130rpx;
    margin: 10rpx;
    border-radius: 20rpx;
    background: linear-gradient(to right,#4FA9F1,#5988EC);
    display: flex;
    align-items: center;
}

.item view {
    font-size: 35rpx;
    font-weight: bold;
    flex: 1;
    text-align: start;
    color: white;
}

.userinfo-nickname {
    font-size: 35rpx;
    font-weight: bold;
    flex: 1;
    text-align: left;
