/* pages/sub_pages/signin/signin.wxss */
.main_bg {
    width: 100%;
    position: absolute;
    z-index: -1;
    height: 100%;
}

.header {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 100rpx;
}

.header image {
    height: 98rpx;
    width: 396rpx;
}

.header-content {
    position: absolute;
    top: 10rpx;
    left: 0;
    right: 0;
    text-align: center;
    line-height: 70rpx;
    color: white;
    font-size: 40rpx;
}

.wrap {
    border-radius: 20rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    width: 100%;
    margin-top: 150rpx;
    padding-top: 80rpx;
}

.sign-item {
    width: 90%;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 10rpx 0;
    box-shadow: 0rpx 5rpx 0rpx #aaa;
    height: 80rpx;
}

.day_Info{
    /* color: #0E638D; */
    display: flex;
    width: 100%;
    padding: 0 20rpx;
    height: 86rpx;
    line-height: 86rpx;
    position: fixed;
}
.viewIcon{
    /* color: #0E638D; */
   
    height: 86rpx;
    line-height: 86rpx;
}
.item-title {
    color: #ffffff;
    padding: 0 0rpx;
    height: 76rpx;
    line-height: 76rpx;
    font-size: 30rpx;
    /* position: fixed; */
}
.img_icon{
    justify-content: center;
    margin-left: 200rpx;
    width: 56rpx;
    height: 58rpx;  
    margin-top: 15rpx;
}
.item_Reward{
    justify-content: center;
    margin-left: 20rpx;
    /* width: 56rpx;
    height: 58rpx;   */
}
.day_Bk{
    /* display: inline; */
    width: 687rpx;
    height: 85rpx;
}
.item-coin {
    height: 80rpx;
    flex: 1;
    line-height: 80rpx;
    display: flex;
    flex-direction: row;
    text-align: center;
}

.item-coin view {
    flex: 1;
}

.btn_hongbao {
    width: 356rpx;
    height: 91rpx;
   
    margin-top: 40rpx;
}

.sign {
    text-align: right;
    margin-right: 20rpx;
}

.sign text {
    background: #CCDBD9;
    font-size: 35rpx;
    color: white;
    font-weight: bold;
    padding: 5rpx 10rpx;
    border-radius: 10rpx;
    -webkit-text-stroke: 1rpx #7FD58B;
}